<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:gravity="right">

        <TextView
            android:id="@+id/input_expression"
            style="@style/TextAppearance.AppCompat.NumberExpretionSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"/>

        <TextView
            android:id="@+id/input_number"
            style="@style/TextAppearance.AppCompat.NumberExpretion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|top" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/btn_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_789"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_div"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/division"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_mul"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq"
                android:gravity="center" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mul"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_minus"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq"
                android:gravity="center" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/minus"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_plus"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq"
                android:gravity="center" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/plus"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_456"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_seven"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_eight"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nine"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="9" />

            <RelativeLayout
                android:id="@+id/btn_cancel"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/brn_extion"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cancel"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_123"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_four"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_five"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_six"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="6" />

            <RelativeLayout
                android:id="@+id/btn_delete"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/brn_extion"/>

                <TextView
                    android:id="@+id/text_del"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.AppCompat.NumberGray"
                    android:text="C"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnBottom"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_one"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_two"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_three"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="3" />

            <RelativeLayout
                android:id="@+id/btn_minplus"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/brn_extion"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/minus_plus"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_zer"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="0" />

            <RelativeLayout
                android:id="@+id/btn_dot"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/brn_extion"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/TextAppearance.AppCompat.NumberGray"
                    android:text=","
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_eq"
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/equal" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>