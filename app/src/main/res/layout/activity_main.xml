<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:gravity="center_horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        android:gravity="right">

        <TextView
            android:id="@+id/input_expression"
            style="@style/TextAppearance.AppCompat.NumberExpretionSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="98456+6545" />

        <TextView
            android:id="@+id/input_number"
            style="@style/TextAppearance.AppCompat.NumberExpretion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|top"
            android:text="6545" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="457dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/btn_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_789"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_789"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_456"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_seven"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_eight"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nine"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/brn_extion" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_456"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_123"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_four"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_five"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_six"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/brn_extion" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnBottom"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_one"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_two"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_three"
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/brn_extion" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                style="@style/TextAppearance.AppCompat.NumberGray"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number"
                android:text="0" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_number" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="165dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_eq" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>